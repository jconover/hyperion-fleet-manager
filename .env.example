# Environment Configuration
ENVIRONMENT=dev
APP_VERSION=v1.0.0
LOG_LEVEL=info

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0
API_BASE_URL=http://localhost:8080
API_TIMEOUT=30s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hyperion
DB_USER=postgres
DB_PASSWORD=changeme
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=100
DB_MAX_IDLE_CONNECTIONS=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Terraform Backend
TF_STATE_BUCKET=hyperion-terraform-state
TF_STATE_LOCK_TABLE=hyperion-terraform-locks
TF_STATE_REGION=us-east-1

# Authentication
JWT_SECRET=changeme-generate-secure-secret
JWT_EXPIRATION=24h
API_KEY=changeme-generate-secure-key

# Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true
XRAY_ENABLED=false

# CloudWatch
CLOUDWATCH_LOG_GROUP=/hyperion/application
CLOUDWATCH_LOG_STREAM=api

# External Services
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
PAGERDUTY_API_KEY=

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false
ENABLE_AUTO_SCALING=true

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Frontend Configuration
VITE_API_URL=http://localhost:8080/api/v1
VITE_WS_URL=ws://localhost:8080/ws
VITE_ENV=development

# Testing
TEST_DB_NAME=hyperion_test
TEST_REDIS_DB=1

# Deployment
DEPLOY_TIMEOUT=600
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_INTERVAL=10

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=hyperion-backups
