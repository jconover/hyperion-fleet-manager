{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "cwagent"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/fleet-manager/application.log",
            "log_group_name": "/hyperion/fleet/application",
            "log_stream_name": "{instance_id}/application",
            "retention_in_days": 30,
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/fleet-manager/system.log",
            "log_group_name": "/hyperion/fleet/system",
            "log_stream_name": "{instance_id}/system",
            "retention_in_days": 30,
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/fleet-manager/security.log",
            "log_group_name": "/hyperion/fleet/security",
            "log_stream_name": "{instance_id}/security",
            "retention_in_days": 90,
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/messages",
            "log_group_name": "/hyperion/fleet/system",
            "log_stream_name": "{instance_id}/messages",
            "retention_in_days": 30,
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/secure",
            "log_group_name": "/hyperion/fleet/security",
            "log_stream_name": "{instance_id}/secure",
            "retention_in_days": 90,
            "timezone": "UTC"
          }
        ]
      }
    },
    "log_stream_name": "{instance_id}"
  },
  "metrics": {
    "namespace": "FleetManager",
    "metrics_collected": {
      "cpu": {
        "measurement": [
          {
            "name": "cpu_usage_idle",
            "rename": "cpu_usage_idle",
            "unit": "Percent"
          },
          {
            "name": "cpu_usage_iowait",
            "rename": "cpu_usage_iowait",
            "unit": "Percent"
          },
          {
            "name": "cpu_time_guest",
            "rename": "cpu_time_guest",
            "unit": "None"
          }
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "*"
        ],
        "totalcpu": false
      },
      "disk": {
        "measurement": [
          {
            "name": "used_percent",
            "rename": "disk_used_percent",
            "unit": "Percent"
          },
          {
            "name": "free",
            "rename": "disk_free",
            "unit": "Gigabytes"
          },
          {
            "name": "total",
            "rename": "disk_total",
            "unit": "Gigabytes"
          },
          {
            "name": "inodes_free",
            "rename": "disk_inodes_free",
            "unit": "Count"
          }
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "/"
        ],
        "ignore_file_system_types": [
          "sysfs",
          "devtmpfs",
          "tmpfs"
        ]
      },
      "diskio": {
        "measurement": [
          {
            "name": "io_time",
            "rename": "diskio_io_time",
            "unit": "Milliseconds"
          },
          {
            "name": "write_bytes",
            "rename": "diskio_write_bytes",
            "unit": "Bytes"
          },
          {
            "name": "read_bytes",
            "rename": "diskio_read_bytes",
            "unit": "Bytes"
          },
          {
            "name": "writes",
            "rename": "diskio_writes",
            "unit": "Count"
          },
          {
            "name": "reads",
            "rename": "diskio_reads",
            "unit": "Count"
          }
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "*"
        ]
      },
      "mem": {
        "measurement": [
          {
            "name": "mem_used_percent",
            "rename": "mem_used_percent",
            "unit": "Percent"
          },
          {
            "name": "mem_available",
            "rename": "mem_available",
            "unit": "Megabytes"
          },
          {
            "name": "mem_used",
            "rename": "mem_used",
            "unit": "Megabytes"
          },
          {
            "name": "mem_total",
            "rename": "mem_total",
            "unit": "Megabytes"
          }
        ],
        "metrics_collection_interval": 60
      },
      "netstat": {
        "measurement": [
          {
            "name": "tcp_established",
            "rename": "netstat_tcp_established",
            "unit": "Count"
          },
          {
            "name": "tcp_time_wait",
            "rename": "netstat_tcp_time_wait",
            "unit": "Count"
          }
        ],
        "metrics_collection_interval": 60
      },
      "swap": {
        "measurement": [
          {
            "name": "swap_used_percent",
            "rename": "swap_used_percent",
            "unit": "Percent"
          },
          {
            "name": "swap_free",
            "rename": "swap_free",
            "unit": "Megabytes"
          },
          {
            "name": "swap_used",
            "rename": "swap_used",
            "unit": "Megabytes"
          }
        ],
        "metrics_collection_interval": 60
      },
      "processes": {
        "measurement": [
          {
            "name": "running",
            "rename": "processes_running",
            "unit": "Count"
          },
          {
            "name": "sleeping",
            "rename": "processes_sleeping",
            "unit": "Count"
          },
          {
            "name": "dead",
            "rename": "processes_dead",
            "unit": "Count"
          }
        ],
        "metrics_collection_interval": 60
      }
    },
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}",
      "InstanceType": "${aws:InstanceType}",
      "ImageId": "${aws:ImageId}",
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}"
    },
    "aggregation_dimensions": [
      [
        "InstanceId"
      ],
      [
        "AutoScalingGroupName"
      ],
      [
        "InstanceId",
        "InstanceType"
      ],
      []
    ]
  }
}
