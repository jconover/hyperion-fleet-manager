# Development Environment Configuration
# These values override the defaults in variables.tf

# General
aws_region   = "us-east-1"
environment  = "dev"
project_name = "hyperion-fleet"
owner        = "platform-team"
cost_center  = "engineering"

# Networking
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
private_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
public_subnet_cidrs  = ["10.0.101.0/24", "10.0.102.0/24"]

# Cost optimization for dev
enable_nat_gateway = true
single_nat_gateway = true  # Single NAT Gateway to reduce costs

# Security
allowed_cidr_blocks   = ["10.0.0.0/8"]
enable_kms_encryption = true

# Compute - Smaller instances for dev
instance_type  = "t3.medium"
instance_count = 2
ssh_key_name   = "dev-key"  # Update with your actual key name

# Auto Scaling - Conservative for dev
enable_auto_scaling  = true
asg_min_size         = 1
asg_max_size         = 4
asg_desired_capacity = 2

# Observability - Shorter retention for dev
log_retention_days         = 7
enable_detailed_monitoring = true
enable_cpu_alarm           = true
cpu_alarm_threshold        = 80
alarm_notification_email   = "platform-team@example.com"  # Update with actual email
